@using Vendor_Indusuno.Extensions
@model Vendor_Indusuno.ViewModels.UserLoginViewModel
@{
    ViewBag.Title = "UserLogin";
    TempData["HRM"] = "active";
    TempData["UserLogin"] = "active";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    @{
        string actType = "Add";
        string actBtn = "Submit";
        string pageTitle = Html.Raw(Html.PageGTitle()) + "";
        if (!String.IsNullOrEmpty(Model.UserLoginModels.Id))
        {
            actType = "Edit";
            actBtn = "Update";
        }
    }
    <h1>
        @pageTitle
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index")"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        @Html.Raw(Html.BuildBreadcrumbNavigation())
        @*<li class="active">Dashboard</li>*@
    </ol>
</section>
<!-- Main content -->
<section class="content">
    @using (Html.BeginForm("UserLogin", "Admin", FormMethod.Post, new { id = "form_advanced_validation", autocomplete = "off" }))
    {
        @Html.AntiForgeryToken()
        <!-- Main row -->
        <div class="row">
            <div class="col-lg-12">
                <!-- Default box -->
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">@actType @pageTitle</h3>
                        <div class="box-tools pull-right">
                            @*<button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                                    <i class="fa fa-times"></i>
                                </button>*@
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="col-md-12">
                            <div class="msgs">
                                @if (ViewData?.ModelState[""]?.Errors?.Any() == true)
                                {
                                    <div class="alert alert-danger alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        <h4><i class="icon fa fa-ban"></i> Error!</h4>
                                        @Html.ValidationSummary(true, "", new { @class = "float-left" })
                                    </div>
                                }
                                @if (!String.IsNullOrEmpty(ViewBag.SucMsg))
                                {
                                    <div class="alert alert-success alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        <h4><i class="icon fa fa-check"></i> Success!</h4>
                                        <strong>Well done!</strong> @ViewBag.SucMsg
                                    </div>
                                }
                                @if (!String.IsNullOrEmpty(TempData["ErrMsg"] + ""))
                                {
                                    <div class="alert alert-danger alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        <h4><i class="icon fa fa-ban"></i> Error!</h4>
                                        <strong>Oh snap!</strong> @TempData["ErrMsg"]
                                    </div>
                                }
                                @if (!String.IsNullOrEmpty(TempData["SucMsg"] + ""))
                                {
                                    <div class="alert alert-success alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        <h4><i class="icon fa fa-check"></i> Success!</h4>
                                        <strong>Well done!</strong> @TempData["SucMsg"]
                                    </div>
                                }
                            </div>
                            @Html.HiddenFor(model => model.UserLoginModels.Id)
                            @Html.HiddenFor(model => model.Act)
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="row col-md-10 p-r-0">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.UserLoginModels.UserCode, new { @class = "form-control-label" })
                                            @Html.TextBoxFor(m => m.UserLoginModels.UserCode,
                                    new
                                    {
                                        @class = "form-control text-uppercase empcode float-left w-92",
                                        placeholder = "Enter " + @Html.DisplayNameFor(m => m.UserLoginModels.UserCode)
                                    })

                                            @Html.ValidationMessageFor(m => m.UserLoginModels.UserCode, "",
                                   new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    @if (String.IsNullOrEmpty(Model.UserLoginModels.Id))
                                    {
                                        <div class="col-md-2 m-t-18">
                                            <button id="UserSearch" type="button" class="btn btn-clear float-left p-6-12-m-0-1" data-toggle="modal" data-target="#empModal">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </div>
                                    }
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.RegisterViewModels.Email, new { @class = "form-control-label" }) <sup>*</sup>
                                        @Html.TextBoxFor(m => m.RegisterViewModels.Email,
                                new
                                {
                                    @class = "form-control",
                                    autocomplete = "off",
                                    placeholder = "Enter " + @Html.DisplayNameFor(m => m.RegisterViewModels.Email)
                                })
                                        @Html.ValidationMessageFor(m => m.RegisterViewModels.Email, "",
                                new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.RegisterViewModels.Password, new { @class = "form-control-label" }) <sup>*</sup>
                                        @Html.PasswordFor(m => m.RegisterViewModels.Password,
                                new
                                {
                                    @class = "form-control input-block input-large",
                                    autocomplete = "off",
                                    type="password",
                                    autocorrect ="off",
                                    spellcheck ="false",
                                    placeholder = "Enter " + @Html.DisplayNameFor(m => m.RegisterViewModels.Password)
                                })
                                        @Html.ValidationMessageFor(m => m.RegisterViewModels.Password, "",
                                new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.RegisterViewModels.ConfirmPassword, new { @class = "form-control-label" }) <sup>*</sup>
                                        @Html.PasswordFor(m => m.RegisterViewModels.ConfirmPassword,
                                new
                                {
                                    @class = "form-control",
                                    autocomplete = "off",
                                    placeholder = "Enter " + @Html.DisplayNameFor(m => m.RegisterViewModels.ConfirmPassword)
                                })
                                        @Html.ValidationMessageFor(m => m.RegisterViewModels.ConfirmPassword, "",
                                new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <div class="col-md-12">
                            <div class="box-tools pull-left">
                                <button type="submit" name="@actBtn.ToLower()" class="btn bg-aqua" title="@actBtn"
                                        value="@actBtn">
                                    @actBtn.ToUpper()
                                </button>
                            </div>
                            <div class="box-tools pull-right">
                                <button type="submit" name="reset" class="btn btn-clear cancel" title="Reset"
                                        value="reset" formnovalidate="formnovalidate">
                                    RESET
                                </button>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-footer-->
                </div>
                <!-- /.box -->
            </div>
            <div class="col-lg-12">
                <!-- Default box -->
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">@pageTitle List</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                                    title="Collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            @*<button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                                    <i class="fa fa-times"></i>
                                </button>*@
                        </div>
                    </div>
                    <div class="box-body">
                        <table id="emploginlist" class="table table-bordered display nowrap">
                            <thead>
                                <tr>
                                    <th>SNo.</th>
                                    <th>Action</th>
                                    <th>@Html.DisplayNameFor(model => model.UserLoginModelList.FirstOrDefault().UserCode)</th>
                                    <th>@Html.DisplayNameFor(model => model.UserLoginModelList.FirstOrDefault().UserName)</th>
                                    <th>@Html.DisplayNameFor(model => model.UserLoginModelList.FirstOrDefault().Designation)</th>
                                    <th>@Html.DisplayNameFor(model => model.UserLoginModelList.FirstOrDefault().Email)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.UserLoginModelList)
                                {
                                    <tr>
                                        <td></td>
                                        <td>
                                            @Html.EncodedActionLink("<i class='fa fa-pencil-square-o'></i>", "EditUserLogin", "Admin", new { id = item.LId }, new { @class = "btn btn-edt bg-aqua", title = "Edit" })
                                            @Html.EncodedActionLink("<i class='fa fa-times'></i>", "DeleteUserLogin", "Admin", new { id = item.LId }, new { data_box = "#mb-act-cnfrm", @class = "btn btn-del m-l-5 mb-act-confirm bg-m-red", title = "Delete" })
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.UserCode)</td>
                                        <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Designation)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
        <div id="empModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">User List</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="card-body">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <table id="sel_emp_list" class="table table-bordered display nowrap" style="width: 100%">
                                    <thead>
                                        <tr>
                                            <th class="text-center"></th>
                                            <th style="display:none;">Id</th>
                                            <th>@Html.DisplayNameFor(model => model.UserProfileModelList.FirstOrDefault().SVCode)</th>
                                            <th>@Html.DisplayNameFor(model => model.UserProfileModelList.FirstOrDefault().Name)</th>
                                            <th>@Html.DisplayNameFor(model => model.UserProfileModelList.FirstOrDefault().Email)</th>
                                            <th>@Html.DisplayNameFor(model => model.UserProfileModelList.FirstOrDefault().Designation)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.UserProfileModelList)
                                        {
                                        <tr>
                                            <td></td>
                                            <td style="display:none;"></td>
                                            <td>@Html.DisplayFor(modelItem => item.SVCode)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Designation)</td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button id="btn_SelEmp" type="button" class="btn bg-aqua" data-dismiss="modal">OK</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- danger with sound -->
        <div class="message-box animated fadeIn" data-sound="alert" id="mb-act-cnfrm">
            <div class="mb-container">
                <div class="mb-middle">
                    <div class="mb-title"><span class="fa fa-warning"></span> Confirm <strong>Box</strong> ?</div>
                    <div class="mb-content">
                        <p>Are you sure you want to delete?</p>
                        <p>Press No if you want to Cancel. Press Yes to Delete the record.</p>
                    </div>
                    <div class="mb-footer">
                        <div class="pull-right">
                            <a id="confirmhref" href="#" class="btn btn-confirm-yes btn-lg">Yes</a>
                            <button class="btn btn-confirm-no btn-lg mb-control-close">No</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end danger with sound -->
        <!-- /.row (main row) -->
        <!-- Modal -->
        @*<div class="modal fade" id="modalAddAddUser" style="display: none;">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                            <h4 class="modal-title">Default Modal</h4>
                        </div>
                        <div class="modal-body">
                            <p>One fine body…</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>*@
    }
</section>
<!-- /.content -->
