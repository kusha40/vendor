@using Vendor_Indusuno.Extensions
@model Vendor_Indusuno.ViewModels.VendorCreditViewModel
@{
	ViewBag.Title = "Vendor Credit Information";
	TempData["CreditInfo"] = "active";
	Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
	@{
		string actType = "Add";
		string actBtn = "Submit";
		string pageTitle = Html.Raw(Html.PageTitle()) + "";
		if (!String.IsNullOrEmpty(Model.VendorCreditModels.Id))
		{
			actType = "Edit";
			actBtn = "Update";
		}
	}
	<h1>
		@pageTitle
		<small></small>
	</h1>
	<ol class="breadcrumb">
		<li><a href="@Url.Action("Index")"><i class="fa fa-dashboard"></i> Dashboard</a></li>
		@Html.Raw(Html.BuildBreadcrumbNavigation())
	</ol>
</section>
<!-- Main content -->
<section class="content">
	@using (Html.BeginForm("CreditInfo", "Dashboard", FormMethod.Post, new { id = "form_advanced_validation", autocomplete = "off", enctype = "multipart/form-data" }))
	{
		@Html.AntiForgeryToken()
		<!-- Main row -->
		<div class="row">
			<div class="col-lg-12">
				<!-- Default box -->
				<div class="box">
					<div class="box-header with-border">
						<h3 class="box-title">@actType @pageTitle</h3>
						<div class="box-tools pull-right">
							@*<button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
										title="Collapse">
									<i class="fa fa-minus"></i>
								</button>*@
							@*<button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
									<i class="fa fa-times"></i>
								</button>*@
						</div>
					</div>
					<div class="box-body">
                        <div class="col-md-12">
                            <div class="msgs">
                                @if (ViewData?.ModelState[""]?.Errors?.Any() == true)
                                {
                                    <div class="alert alert-danger alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        <h4><i class="icon fa fa-ban"></i> Error!</h4>
                                        @Html.ValidationSummary(true, "", new { @class = "float-left" })
                                    </div>
                                }
                                @if (!String.IsNullOrEmpty(ViewBag.SucMsg))
                                {
                                    <div class="alert alert-success alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        <h4><i class="icon fa fa-check"></i> Success!</h4>
                                        <strong>Well done!</strong> @ViewBag.SucMsg
                                    </div>
                                }
                                @if (!String.IsNullOrEmpty(ViewBag.ErrMsg))
                                {
                                    <div class="alert alert-danger alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        <h4><i class="icon fa fa-ban"></i> Error!</h4>
                                        <strong>Oh snap!</strong> @ViewBag.ErrMsg
                                    </div>
                                }
                                @if (!String.IsNullOrEmpty(TempData["ErrMsg"] + ""))
                                {
                                    <div class="alert alert-danger alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        <h4><i class="icon fa fa-ban"></i> Error!</h4>
                                        <strong>Oh snap!</strong> @TempData["ErrMsg"]
                                    </div>
                                }
                                @if (!String.IsNullOrEmpty(TempData["SucMsg"] + ""))
                                {
                                    <div class="alert alert-success alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        <h4><i class="icon fa fa-check"></i> Success!</h4>
                                        <strong>Well done!</strong> @TempData["SucMsg"]
                                    </div>
                                }
                            </div>
                            @Html.HiddenFor(model => model.VendorCreditModels.Id)
                            @Html.HiddenFor(model => model.VendorCreditModels.VendorCode)
                        </div>
						<div class="row">
							<div class="col-md-12">
								<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
									<div class="form-group">
										@Html.LabelFor(m => m.VendorCreditModels.SecurityAccount, new { @class = "form-control-label" }) <sup>*</sup><br />
										@Html.RadioButtonFor(m => m.VendorCreditModels.SecurityAccount, "Yes") Yes &nbsp;&nbsp;
										@Html.RadioButtonFor(m => m.VendorCreditModels.SecurityAccount, "No") No
										@Html.ValidationMessageFor(m => m.VendorCreditModels.SecurityAccount, "",
								new { @class = "text-danger" })
									</div>
								</div>
								<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
									<div class="form-group">
										@Html.LabelFor(m => m.VendorCreditModels.CreditDays, new { @class = "form-control-label" }) <sup>*</sup>
										@Html.TextBoxFor(m => m.VendorCreditModels.CreditDays,
								new
								{
									@class = "form-control",
									placeholder = "Enter " + @Html.DisplayNameFor(m => m.VendorCreditModels.CreditDays)
								})
										@Html.ValidationMessageFor(m => m.VendorCreditModels.CreditDays, "",
								new { @class = "text-danger" })
									</div>
								</div>
								<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
									<div class="form-group">
										@Html.LabelFor(m => m.VendorCreditModels.Amount, new { @class = "form-control-label" }) <sup>*</sup>
										@Html.TextBoxFor(m => m.VendorCreditModels.Amount,
								new
								{
									@class = "form-control",
									placeholder = "Enter " + @Html.DisplayNameFor(m => m.VendorCreditModels.Amount)
								})
										@Html.ValidationMessageFor(m => m.VendorCreditModels.Amount, "",
								new { @class = "text-danger" })
									</div>
								</div>
								<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
									<div class="form-group">
										@Html.LabelFor(m => m.VendorCreditModels.CreditType, new { @class = "form-control-label" }) <sup>*</sup>
										@Html.DropDownListFor(m => m.VendorCreditModels.CreditType, new SelectList(Model.CreditTypeModelList, "Key", "Value"),
					                    "Select Credit Type", new { @class = "form-control" })
										@Html.ValidationMessageFor(m => m.VendorCreditModels.CreditType, "",
								new { @class = "text-danger" })
									</div>
								</div>
								<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
									<div class="form-group">
										@Html.LabelFor(m => m.VendorCreditModels.PayInitForm, new { @class = "form-control-label" }) <sup>*</sup>
										@Html.DropDownListFor(m => m.VendorCreditModels.PayInitForm, new SelectList(Model.PayInitFormModelList, "Key", "Value"),
					                    "Select Pay Init Form", new { @class = "form-control" })
										@Html.ValidationMessageFor(m => m.VendorCreditModels.PayInitForm, "",
								new { @class = "text-danger" })
									</div>
								</div>
								<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
									<div class="form-group">
										@Html.LabelFor(m => m.VendorCreditModels.CreditNoteTerms, new { @class = "form-control-label" }) <sup>*</sup>
										@Html.DropDownListFor(m => m.VendorCreditModels.CreditNoteTerms, new SelectList(Model.CreditNoteTermsModelList, "Key", "Value"),
					                    "Select Credit Note Temrs", new { @class = "form-control" })
										@Html.ValidationMessageFor(m => m.VendorCreditModels.CreditNoteTerms, "",
								new { @class = "text-danger" })
									</div>
								</div>
								<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
									<div class="form-group">
										@Html.LabelFor(m => m.VendorCreditModels.SpecialTerms, new { @class = "form-control-label" }) <sup>*</sup>
										@Html.TextBoxFor(m => m.VendorCreditModels.SpecialTerms,
								new
								{
									@class = "form-control",
									placeholder = "Enter " + @Html.DisplayNameFor(m => m.VendorCreditModels.SpecialTerms)
								})
										@Html.ValidationMessageFor(m => m.VendorCreditModels.SpecialTerms, "",
								new { @class = "text-danger" })
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- /.box-body -->
					<div class="box-footer">
						<div class="col-md-12">
							<div class="box-tools pull-left">
								<button type="submit" name="@actBtn.ToLower()" class="btn bg-aqua" title="@actBtn"
										value="@actBtn">
									@actBtn.ToUpper()
								</button>
								@*@if (String.IsNullOrEmpty(Model.UOMModels.Id))
									{

										<button type="submit" name="submit" class="btn btn-primary" title="Submit"
												value="Submit">
											SUBMIT
										</button>
									}
									else
									{
										<button type="submit" name="update" class="btn btn-primary" title="Update"
												value="Update">
											UPDATE
										</button>
									}*@
							</div>
							@*<div class="box-tools pull-right">
									<button type="submit" name="reset" class="btn btn-clear cancel" title="Reset"
											value="reset" formnovalidate="formnovalidate">
										RESET
									</button>
								</div>*@
						</div>
					</div>
					<!-- /.box-footer-->
				</div>
				<!-- /.box -->
			</div>
		</div>
		<!-- danger with sound -->
		<div class="message-box animated fadeIn" data-sound="alert" id="mb-act-cnfrm">
			<div class="mb-container">
				<div class="mb-middle">
					<div class="mb-title"><span class="fa fa-warning"></span> Confirm <strong>Box</strong> ?</div>
					<div class="mb-content">
						<p>Are you sure you want to delete?</p>
						<p>Press No if you want to Cancel. Press Yes to Delete the record.</p>
					</div>
					<div class="mb-footer">
						<div class="pull-right">
							<a id="confirmhref" href="#" class="btn btn-confirm-yes btn-lg">Yes</a>
							<button class="btn btn-confirm-no btn-lg mb-control-close">No</button>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- end danger with sound -->
	}
</section>
<!-- /.content -->
