@using Vendor_Indusuno.Extensions
@model Vendor_Indusuno.ViewModels.PurchaseOrderViewModel
@{
    ViewBag.Title = "Purchase Order";
    TempData["Purchase"] = "active";
    TempData["PurchaseOrders"] = "active";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    @{
        string pageTitle = Html.Raw(Html.PageTitle()) + "";
        string actType = "Edit";
        string actBtn = "Update";
    }
    <h1>
       Edit @pageTitle
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index")"><i class="fa fa-dashboard"></i> Home</a></li>
        @Html.Raw(Html.BuildBreadcrumbNavigation())
    </ol>
</section>
<!-- Main content -->
<section class="content">
    @using (Html.BeginForm("EditPurchaseOrder", "Admin", FormMethod.Post, new { id = "form_advanced_validation", autocomplete = "off", enctype = "multipart/form-data" }))
