@using Vendor_Indusuno.Extensions
@model Vendor_Indusuno.ViewModels.WarehouseViewModel
@{
    ViewBag.Title = "Warehouse";
    TempData["Master"] = "active";
    TempData["Warehouse"] = "active";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    @{
        string actType = "Add";
        string actBtn = "Submit";
        string pageTitle = Html.Raw(Html.PageTitle()) + "";
        if (!String.IsNullOrEmpty(Model.WarehouseModels.Id))
        {
            actType = "Edit";
            actBtn = "Update";
        }
    }
    <h1>
        @pageTitle
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index")"><i class="fa fa-dashboard"></i> Home</a></li>
        @Html.Raw(Html.BuildBreadcrumbNavigation())
    </ol>
</section>
<!-- Main content -->
<section class="content">
    @using (Html.BeginForm("Warehouse", "Admin", FormMethod.Post, new { id = "form_advanced_validation", autocomplete = "off", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <!-- Main row -->
        <div class="row">
            <div class="col-lg-12">
                <!-- Default box -->
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">@actType @pageTitle</h3>
                        <div class="box-tools pull-right">
                            @*<button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                                        title="Collapse">
                                    <i class="fa fa-minus"></i>
                                </button>*@
                            @*<button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                                    <i class="fa fa-times"></i>
                                </button>*@
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="col-md-12">
                            <div class="msgs">
                                @if (ViewData?.ModelState[""]?.Errors?.Any() == true)
                                {
                                    <div class="alert alert-danger alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        <h4><i class="icon fa fa-ban"></i> Error!</h4>
                                        @Html.ValidationSummary(true, "", new { @class = "" })
                                    </div>
                                }
                                @if (!String.IsNullOrEmpty(ViewBag.SucMsg))
                                {
                                    <div class="alert alert-success alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        <h4><i class="icon fa fa-check"></i> Success!</h4>
                                        <strong>Well done!</strong> @ViewBag.SucMsg
                                    </div>
                                }
                                @if (!String.IsNullOrEmpty(ViewBag.ErrMsg))
                                {
                                    <div class="alert alert-danger alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        <h4><i class="icon fa fa-ban"></i> Error!</h4>
                                        <strong>Oh snap!</strong> @ViewBag.ErrMsg
                                    </div>
                                }
                                @if (!String.IsNullOrEmpty(TempData["ErrMsg"] + ""))
                                {
                                    <div class="alert alert-danger alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        <h4><i class="icon fa fa-ban"></i> Error!</h4>
                                        <strong>Oh snap!</strong> @TempData["ErrMsg"]
                                    </div>
                                }
                                @if (!String.IsNullOrEmpty(TempData["SucMsg"] + ""))
                                {
                                    <div class="alert alert-success alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        <h4><i class="icon fa fa-check"></i> Success!</h4>
                                        <strong>Well done!</strong> @TempData["SucMsg"]
                                    </div>
                                }
                            </div>
                            @Html.HiddenFor(model => model.WarehouseModels.Id)
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.WarehouseModels.WarehouseCode, new { @class = "form-control-label" }) <sup>*</sup>
                                        @Html.TextBoxFor(m => m.WarehouseModels.WarehouseCode,
                                 new
                                 {
                                     @class = "form-control text-uppercase",
                                     @readonly = true,
                                     placeholder = "Enter " + @Html.DisplayNameFor(m => m.WarehouseModels.WarehouseCode)
                                 })
                                        @Html.ValidationMessageFor(m => m.WarehouseModels.WarehouseCode, "",
                                 new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.WarehouseModels.WarehouseName, new { @class = "form-control-label" }) <sup>*</sup>
                                        @Html.TextBoxFor(m => m.WarehouseModels.WarehouseName,
                                new
                                {
                                    @class = "form-control text-capitalize",
                                    placeholder = "Enter " + @Html.DisplayNameFor(m => m.WarehouseModels.WarehouseName)
                                })
                                        @Html.ValidationMessageFor(m => m.WarehouseModels.WarehouseName, "",
                                new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.WarehouseModels.Incharge, new { @class = "form-control-label" }) <sup>*</sup>
                                        @Html.TextBoxFor(m => m.WarehouseModels.Incharge,
                                new
                                {
                                    @class = "form-control text-capitalize",
                                    placeholder = "Enter " + @Html.DisplayNameFor(m => m.WarehouseModels.Incharge)
                                })
                                        @Html.ValidationMessageFor(m => m.WarehouseModels.Incharge, "",
                                new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.WarehouseModels.Contact1, new { @class = "form-control-label" }) <sup>*</sup>
                                        @Html.TextBoxFor(m => m.WarehouseModels.Contact1,
                                new
                                {
                                    @class = "form-control",
                                    placeholder = "Enter " + @Html.DisplayNameFor(m => m.WarehouseModels.Contact1)
                                })
                                        @Html.ValidationMessageFor(m => m.WarehouseModels.Contact1, "",
                                new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.WarehouseModels.Contact2, new { @class = "form-control-label" })
                                        @Html.TextBoxFor(m => m.WarehouseModels.Contact2,
                                new
                                {
                                    @class = "form-control",
                                    placeholder = "Enter " + @Html.DisplayNameFor(m => m.WarehouseModels.Contact2)
                                })
                                        @Html.ValidationMessageFor(m => m.WarehouseModels.Contact2, "",
                                new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.WarehouseModels.AddressLine1, new { @class = "form-control-label" })
                                        @Html.TextBoxFor(m => m.WarehouseModels.AddressLine1,
                                new
                                {
                                    @class = "form-control text-capitalize",
                                    placeholder = "Enter " + @Html.DisplayNameFor(m => m.WarehouseModels.AddressLine1)
                                })
                                        @Html.ValidationMessageFor(m => m.WarehouseModels.AddressLine1, "",
                                new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.WarehouseModels.AddressLine2, new { @class = "form-control-label" })
                                        @Html.TextBoxFor(m => m.WarehouseModels.AddressLine2,
                                new
                                {
                                    @class = "form-control text-capitalize",
                                    placeholder = "Enter " + @Html.DisplayNameFor(m => m.WarehouseModels.AddressLine2)
                                })
                                        @Html.ValidationMessageFor(m => m.WarehouseModels.AddressLine2, "",
                                new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.WarehouseModels.City, new { @class = "form-control-label" })
                                        @Html.TextBoxFor(m => m.WarehouseModels.City,
                                new
                                {
                                    @class = "form-control text-capitalize",
                                    placeholder = "Enter " + @Html.DisplayNameFor(m => m.WarehouseModels.City)
                                })
                                        @Html.ValidationMessageFor(m => m.WarehouseModels.City, "",
                                new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.WarehouseModels.State, new { @class = "form-control-label" }) <sup>*</sup>
                                        @Html.DropDownListFor(m => m.WarehouseModels.State, new SelectList(Model.StateModelList, "Key", "Value"),
                                        "--Select State--", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.WarehouseModels.State, "",
                                new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.WarehouseModels.Country, new { @class = "form-control-label" }) <sup>*</sup>
                                        @Html.DropDownListFor(m => m.WarehouseModels.Country, new SelectList(Model.CountryModelList, "Key", "Value"),
                                        "--Select Country--", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.WarehouseModels.Country, "",
                                new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.WarehouseModels.Pincode, new { @class = "form-control-label" })
                                        @Html.TextBoxFor(m => m.WarehouseModels.Pincode,
                                new
                                {
                                    @class = "form-control text-capitalize",
                                    placeholder = "Enter " + @Html.DisplayNameFor(m => m.WarehouseModels.Pincode)
                                })
                                        @Html.ValidationMessageFor(m => m.WarehouseModels.Pincode, "",
                                new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <div class="col-md-12">
                            <div class="box-tools pull-left">
                                <button type="submit" name="@actBtn.ToLower()" class="btn bg-aqua" title="@actBtn"
                                        value="@actBtn">
                                    @actBtn.ToUpper()
                                </button>
                            </div>
                            <div class="box-tools pull-right">
                                <button type="submit" name="reset" class="btn btn-clear cancel" title="Reset"
                                        value="reset" formnovalidate="formnovalidate">
                                    RESET
                                </button>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-footer-->
                </div>
                <!-- /.box -->
            </div>
            <div class="col-lg-12">
                <!-- Default box -->
                <div class="box">
                    @if (Model.WarehouseModelList.Count > 0)
                    {
                        <div class="box-header with-border">
                            <h3 class="box-title">@pageTitle List</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                                        title="Collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                                @*<button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                                        <i class="fa fa-times"></i>
                                    </button>*@
                            </div>
                        </div>
                        <div class="box-body">
                            <table id="tblWarehouse" class="table table-bordered display nowrap">
                                <thead>
                                    <tr>
                                        <th>SNo.</th>
                                        <th>Action</th>
                                        <th>@Html.DisplayNameFor(model => model.WarehouseModelList.FirstOrDefault().WarehouseCode)</th>
                                        <th>@Html.DisplayNameFor(model => model.WarehouseModelList.FirstOrDefault().WarehouseName)</th>
                                        <th>@Html.DisplayNameFor(model => model.WarehouseModelList.FirstOrDefault().Incharge)</th>
                                        <th>@Html.DisplayNameFor(model => model.WarehouseModelList.FirstOrDefault().Contact1)</th>
                                        <th>@Html.DisplayNameFor(model => model.WarehouseModelList.FirstOrDefault().Contact2)</th>
                                        <th>@Html.DisplayNameFor(model => model.WarehouseModelList.FirstOrDefault().AddressLine1)</th>
                                        <th>@Html.DisplayNameFor(model => model.WarehouseModelList.FirstOrDefault().AddressLine2)</th>
                                        <th>@Html.DisplayNameFor(model => model.WarehouseModelList.FirstOrDefault().City)</th>
                                        <th>@Html.DisplayNameFor(model => model.WarehouseModelList.FirstOrDefault().State)</th>
                                        <th>@Html.DisplayNameFor(model => model.WarehouseModelList.FirstOrDefault().Country)</th>
                                        <th>@Html.DisplayNameFor(model => model.WarehouseModelList.FirstOrDefault().Pincode)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.WarehouseModelList)
                                    {
                                        <tr>
                                            <td></td>
                                            <td>
                                                @Html.EncodedActionLink("<i class='fa fa-pencil-square-o'></i>", "EditWarehouse", "Admin", new { id = item.Id, act = 1 }, new { @class = "btn btn-edt bg-aqua", title = "Edit" })
                                                @Html.EncodedActionLink("<i class='fa fa-times'></i>", "DeleteWarehouse", "Admin", new { id = item.Id }, new { data_box = "#mb-act-cnfrm", @class = "btn btn-del m-l-5 mb-act-confirm bg-m-red", title = "Delete" })
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.WarehouseCode)</td>
                                            <td>@Html.DisplayFor(modelItem => item.WarehouseName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Incharge)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Contact1)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Contact2)</td>
                                            <td>@Html.DisplayFor(modelItem => item.AddressLine1)</td>
                                            <td>@Html.DisplayFor(modelItem => item.AddressLine2)</td>
                                            <td>@Html.DisplayFor(modelItem => item.City)</td>
                                            <td>@Html.DisplayFor(modelItem => item.State)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Country)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Pincode)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    }
                    else
                    {
                        <div class="box-body">
                            <div class="no-record">No record found.</div>
                        </div>
                    }
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- danger with sound -->
        <div class="message-box animated fadeIn" data-sound="alert" id="mb-act-cnfrm">
            <div class="mb-container">
                <div class="mb-middle">
                    <div class="mb-title"><span class="fa fa-warning"></span> Confirm <strong>Box</strong> ?</div>
                    <div class="mb-content">
                        <p>Are you sure you want to delete?</p>
                        <p>Press No if you want to Cancel. Press Yes to Delete the record.</p>
                    </div>
                    <div class="mb-footer">
                        <div class="pull-right">
                            <a id="confirmhref" href="#" class="btn btn-confirm-yes btn-lg">Yes</a>
                            <button class="btn btn-confirm-no btn-lg mb-control-close">No</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end danger with sound -->
        <!-- /.row (main row) -->
