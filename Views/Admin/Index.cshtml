@using Vendor_Indusuno.Extensions
@model Vendor_Indusuno.ViewModels.IndexViewModel
@{
    ViewBag.Title = "Home";
    TempData["Index"] = "active";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    @{
        string actType = "Add";
        string actBtn = "Submit";
        string pageTitle = Html.Raw(Html.PageGTitle()) + "";
    }
    <h1>
        @pageTitle
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index")"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        @Html.Raw(Html.BuildBreadcrumbNavigation())
        @*<li class="active">Dashboard</li>*@
    </ol>
</section>
<!-- Main content -->
<section class="content">
    @using (Html.BeginForm("Index", "Admin", FormMethod.Post, new { id = "form_advanced_validation", autocomplete = "off", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <!-- Main row -->
        <div class="row">
            <div class="col-lg-12">
                <!-- Default box -->
                <div class="box">
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="box box-widget widget-user-2">
                            <div class="widget-user-header bg-yellow p-10">
                                <h3 class="widget-user-username m-l-0">Enquiry</h3>
                                <h5 class="widget-user-desc m-l-0">Total</h5>
                            </div>
                            <div class="box-footer no-padding">
                                <ul class="nav nav-stacked">
                                    <li><a href="#">Last Year <span class="pull-right badge bg-blue">@Model.EnqCountModels.OLastYear</span></a></li>
                                    <li><a href="#">Last Month <span class="pull-right badge bg-blue">@Model.EnqCountModels.OLastMonth</span></a></li>
                                    @* <li><a href="#">Last 7 Days <span class="pull-right badge bg-aqua">@Model.EnqCountModels.OLast7Days</span></a></li>*@
                                    <li><a href="#">Yesterday <span class="pull-right badge bg-blue">@Model.EnqCountModels.OYesterday</span></a></li>
                                    <li><a href="#">Today <span class="pull-right badge bg-green">@Model.EnqCountModels.OToday</span></a></li>
                                    <li><a href="#">Current Month <span class="pull-right badge bg-red">@Model.EnqCountModels.OCMonth</span></a></li>
                                    <li><a href="#">Current Year <span class="pull-right badge bg-red">@Model.EnqCountModels.OCYear</span></a></li>
                                    <li><a href="#">Total <span class="pull-right badge bg-red">@Model.EnqCountModels.OTotal</span></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="box box-widget widget-user-2">
                            <div class="widget-user-header bg-green p-10">
                                <h3 class="widget-user-username m-l-0">Enquiry</h3>
                                <h5 class="widget-user-desc m-l-0">Pending</h5>
                            </div>
                            <div class="box-footer no-padding">
                                <ul class="nav nav-stacked">
                                    <li><a href="#">Last Year <span class="pull-right badge bg-blue">@Model.EnqCountModels.PLastYear</span></a></li>
                                    <li><a href="#">Last Month <span class="pull-right badge bg-blue">@Model.EnqCountModels.PLastMonth</span></a></li>
                                    @*<li><a href="#">Last 7 Days <span class="pull-right badge bg-aqua">@Model.EnqCountModels.PLast7Days</span></a></li>*@
                                    <li><a href="#">Yesterday <span class="pull-right badge bg-blue">@Model.EnqCountModels.PYesterday</span></a></li>
                                    <li><a href="#">Today <span class="pull-right badge bg-green">@Model.EnqCountModels.PToday</span></a></li>
                                    <li><a href="#">Current Month <span class="pull-right badge bg-red">@Model.EnqCountModels.PCMonth</span></a></li>
                                    <li><a href="#">Current Year <span class="pull-right badge bg-red">@Model.EnqCountModels.PCYear</span></a></li>
                                    <li><a href="#">Total <span class="pull-right badge bg-red">@Model.EnqCountModels.PTotal</span></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="box box-widget widget-user-2">
                            <div class="widget-user-header bg-aqua-active p-10">
                                <h3 class="widget-user-username m-l-0">Purchase Order</h3>
                                <h5 class="widget-user-desc m-l-0">Total</h5>
                            </div>
                            <div class="box-footer no-padding">
                                <ul class="nav nav-stacked">
                                    <li><a href="#">Last Year <span class="badge bg-blue">@Model.POCountModels.OLastYear</span><span class="pull-right badge bg-blue">@Model.POCountModels.OLastYearValue</span></a></li>
                                    <li><a href="#">Last Month <span class="badge bg-blue">@Model.POCountModels.OLastMonth</span><span class="pull-right badge bg-blue">@Model.POCountModels.OLastMonthValue</span></a></li>
                                    @*<li><a href="#">Last 7 Days <span class="pull-right badge bg-aqua">@Model.POCountModels.OLast7Days</span></a></li>*@
                                    <li><a href="#">Yesterday <span class="badge bg-blue">@Model.POCountModels.OYesterday</span><span class="pull-right badge bg-blue">@Model.POCountModels.OYesterdayValue</span></a></li>
                                    <li><a href="#">Today <span class="badge bg-green">@Model.POCountModels.OToday</span><span class="pull-right badge bg-green">@Model.POCountModels.OTodayValue</span></a></li>
                                    <li><a href="#">Current Month <span class="badge bg-red">@Model.POCountModels.OCMonth</span><span class="pull-right badge bg-red">@Model.POCountModels.OCMonthValue</span></a></li>
                                    <li><a href="#">Current Year <span class="badge bg-red">@Model.POCountModels.OCYear</span><span class="pull-right badge bg-red">@Model.POCountModels.OCYearValue</span></a></li>
                                    <li><a href="#">Total <span class="badge bg-red">@Model.POCountModels.OTotal</span><span class="pull-right badge bg-red">@Model.POCountModels.OTotalValue</span></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="box box-widget widget-user-2">
                            <div class="widget-user-header bg-m-red p-10">
                                <h3 class="widget-user-username m-l-0">Quotation</h3>
                                <h5 class="widget-user-desc m-l-0">Total</h5>
                            </div>
                            <div class="box-footer no-padding">
                                <ul class="nav nav-stacked">
                                    <li><a href="#">Last Year <span class="badge bg-blue">@Model.QuotCountModels.OLastYear</span><span class="pull-right badge bg-blue">@Model.QuotCountModels.OLastYearValue</span></a></li>
                                    <li><a href="#">Last Month <span class="badge bg-blue">@Model.QuotCountModels.OLastMonth</span><span class="pull-right badge bg-blue">@Model.QuotCountModels.OLastMonthValue</span></a></li>
                                    @*<li><a href="#">Last 7 Days <span class="pull-right badge bg-aqua">@Model.POCountModels.OLast7Days</span></a></li>*@
                                    <li><a href="#">Yesterday <span class="badge bg-blue">@Model.QuotCountModels.OYesterday</span><span class="pull-right badge bg-blue">@Model.QuotCountModels.OYesterdayValue</span></a></li>
                                    <li><a href="#">Today <span class="badge bg-green">@Model.QuotCountModels.OToday</span><span class="pull-right badge bg-green">@Model.QuotCountModels.OTodayValue</span></a></li>
                                    <li><a href="#">Current Month <span class="badge bg-red">@Model.QuotCountModels.OCMonth</span><span class="pull-right badge bg-red">@Model.QuotCountModels.OCMonthValue</span></a></li>
                                    <li><a href="#">Current Year <span class="badge bg-red">@Model.QuotCountModels.OCYear</span><span class="pull-right badge bg-red">@Model.QuotCountModels.OCYearValue</span></a></li>
                                    <li><a href="#">Total <span class="badge bg-red">@Model.QuotCountModels.OTotal</span><span class="pull-right badge bg-red">@Model.QuotCountModels.OTotalValue</span></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box -->
            </div>
            <div class="col-lg-12">
                <!-- Default box -->
                <div class="col-lg-6">
                    <div class="box">
                        <div class="box box-info h-400">
                            <div class="box-header with-border">
                                <h3 class="box-title">Registerd Vendor List</h3>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body" style="">
                                <table id="tblIndexRegVen" class="table no-margin">
                                    <thead>
                                        <tr>
                                            <th>SNo</th>
                                            <th>@Html.DisplayNameFor(model => model.RegisterVendorInfoModelList.FirstOrDefault().CompanyName)</th>
                                            <th>@Html.DisplayNameFor(model => model.RegisterVendorInfoModelList.FirstOrDefault().ContactPerson)</th>
                                            <th>@Html.DisplayNameFor(model => model.RegisterVendorInfoModelList.FirstOrDefault().Contact1)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var u in Model.RegisterVendorInfoModelList)
                                        {
                                            <tr>
                                                <td></td>
                                                <td>@Html.DisplayFor(model => u.CompanyName)</td>
                                                <td>@Html.DisplayFor(model => u.ContactPerson)</td>
                                                <td>@Html.DisplayFor(model => u.Contact1)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.box-body -->
                        </div>
                    </div>
                    <!-- /.box -->
                </div>
                <div class="col-lg-6">
                    <div class="box">
                        <div class="box box-info h-400">
                            <div class="box-header with-border">
                                <h3 class="box-title">Approved Vendor List</h3>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body" style="">
                                <table id="tblIndexApprvVen" class="table no-margin">
                                    <thead>
                                        <tr>
                                            <th>SNo</th>
                                            <th>@Html.DisplayNameFor(model => model.ApprovedVendorInfoModelList.FirstOrDefault().CompanyName)</th>
                                            <th>@Html.DisplayNameFor(model => model.ApprovedVendorInfoModelList.FirstOrDefault().ContactPerson)</th>
                                            <th>@Html.DisplayNameFor(model => model.ApprovedVendorInfoModelList.FirstOrDefault().Contact1)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var u in Model.ApprovedVendorInfoModelList)
                                        {
                                            <tr>
                                                <td></td>
                                                <td>@Html.DisplayFor(model => u.CompanyName)</td>
                                                <td>@Html.DisplayFor(model => u.ContactPerson)</td>
                                                <td>@Html.DisplayFor(model => u.Contact1)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.box-body -->
                        </div>
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- danger with sound -->
        <div class="message-box animated fadeIn" data-sound="alert" id="mb-act-cnfrm">
            <div class="mb-container">
                <div class="mb-middle">
                    <div class="mb-title"><span class="fa fa-warning"></span> Confirm <strong>Box</strong> ?</div>
                    <div class="mb-content">
                        <p>Are you sure you want to delete?</p>
                        <p>Press No if you want to Cancel. Press Yes to Delete the record.</p>
                    </div>
                    <div class="mb-footer">
                        <div class="pull-right">
                            <a id="confirmhref" href="#" class="btn btn-confirm-yes btn-lg">Yes</a>
                            <button class="btn btn-confirm-no btn-lg mb-control-close">No</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end danger with sound -->
    }
</section>
