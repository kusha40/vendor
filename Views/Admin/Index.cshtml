@using Vendor_Indusuno.Extensions
@model Vendor_Indusuno.ViewModels.IndexViewModel
@{
    ViewBag.Title = "Home";
    TempData["Index"] = "active";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    @{
        string actType = "Add";
        string actBtn = "Submit";
        string pageTitle = Html.Raw(Html.PageTitle()) + "";
    }
    <h1>
        @pageTitle
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index")"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        @Html.Raw(Html.BuildBreadcrumbNavigation())
        @*<li class="active">Dashboard</li>*@
    </ol>
</section>
<!-- Main content -->
<section class="content">
    @using (Html.BeginForm("Index", "Admin", FormMethod.Post, new { id = "form_advanced_validation", autocomplete = "off", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <!-- Main row -->
        <div class="row">
            <div class="col-lg-12">
                <!-- Default box -->
                <div class="box">
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="info-box">
                            <span class="info-box-icon bg-aqua"><i class="fa fa-users"></i></span>

                            <div class="info-box-content">
                                <span class="info-box-text">Today</span>
                                <span class="info-box-number">@Model.VendorCountModels.Today</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <!-- /.info-box -->
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="info-box">
                            <span class="info-box-icon bg-red"><i class="fa fa-users"></i></span>

                            <div class="info-box-content">
                                <span class="info-box-text">Yesterday</span>
                                <span class="info-box-number">@Model.VendorCountModels.Yesterday</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <!-- /.info-box -->
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="info-box">
                            <span class="info-box-icon bg-green"><i class="fa fa-users"></i></span>

                            <div class="info-box-content">
                                <span class="info-box-text">Current Month</span>
                                <span class="info-box-number">@Model.VendorCountModels.CMonth</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <!-- /.info-box -->
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="info-box">
                            <span class="info-box-icon bg-yellow"><i class="fa fa-users"></i></span>

                            <div class="info-box-content">
                                <span class="info-box-text">Current Year</span>
                                <span class="info-box-number">@Model.VendorCountModels.CYear</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <!-- /.info-box -->
                    </div>
                </div>
                <!-- /.box -->
            </div>
            <div class="col-lg-12">
                <!-- Default box -->
                <div class="col-lg-6">
                    <div class="box">
                        <div class="box box-info h-400">
                            <div class="box-header with-border">
                                <h3 class="box-title">Registerd Vendor List</h3>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body" style="">
                                <table id="tblIndexRegVen" class="table no-margin">
                                    <thead>
                                        <tr>
                                            <th>SNo</th>
                                            <th>@Html.DisplayNameFor(model => model.RegisterVendorInfoModelList.FirstOrDefault().CompanyName)</th>
                                            <th>@Html.DisplayNameFor(model => model.RegisterVendorInfoModelList.FirstOrDefault().ContactPerson)</th>
                                            <th>@Html.DisplayNameFor(model => model.RegisterVendorInfoModelList.FirstOrDefault().Contact1)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var u in Model.RegisterVendorInfoModelList)
                                        {
                                            <tr>
                                                <td></td>
                                                <td>@Html.DisplayFor(model => u.CompanyName)</td>
                                                <td>@Html.DisplayFor(model => u.ContactPerson)</td>
                                                <td>@Html.DisplayFor(model => u.Contact1)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.box-body -->
                        </div>
                    </div>
                    <!-- /.box -->
                </div>
                <div class="col-lg-6">
                    <div class="box">
                        <div class="box box-info h-400">
                            <div class="box-header with-border">
                                <h3 class="box-title">Approved Vendor List</h3>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body" style="">
                                <table id="tblIndexApprvVen" class="table no-margin">
                                    <thead>
                                        <tr>
                                            <th>SNo</th>
                                            <th>@Html.DisplayNameFor(model => model.ApprovedVendorInfoModelList.FirstOrDefault().CompanyName)</th>
                                            <th>@Html.DisplayNameFor(model => model.ApprovedVendorInfoModelList.FirstOrDefault().ContactPerson)</th>
                                            <th>@Html.DisplayNameFor(model => model.ApprovedVendorInfoModelList.FirstOrDefault().Contact1)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var u in Model.ApprovedVendorInfoModelList)
                                        {
                                            <tr>
                                                <td></td>
                                                <td>@Html.DisplayFor(model => u.CompanyName)</td>
                                                <td>@Html.DisplayFor(model => u.ContactPerson)</td>
                                                <td>@Html.DisplayFor(model => u.Contact1)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.box-body -->
                        </div>
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- danger with sound -->
        <div class="message-box animated fadeIn" data-sound="alert" id="mb-act-cnfrm">
            <div class="mb-container">
                <div class="mb-middle">
                    <div class="mb-title"><span class="fa fa-warning"></span> Confirm <strong>Box</strong> ?</div>
                    <div class="mb-content">
                        <p>Are you sure you want to delete?</p>
                        <p>Press No if you want to Cancel. Press Yes to Delete the record.</p>
                    </div>
                    <div class="mb-footer">
                        <div class="pull-right">
                            <a id="confirmhref" href="#" class="btn btn-confirm-yes btn-lg">Yes</a>
                            <button class="btn btn-confirm-no btn-lg mb-control-close">No</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end danger with sound -->
    }
</section>
<!-- /.content -->
