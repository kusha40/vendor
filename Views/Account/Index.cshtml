                            <div class="inner pad-40">
                                <h3 class="m-small-box"></h3>
                            </div>
                            <div class="icon icon-right">
                                <i class="ion ion-stats-bars"></i>
                            </div>
                            <span href="#" class="small-box-footer">Inventory <i class="fa fa-arrow-circle-right"></i></span>
                        </div>
                    </a>
                </div>
                <!-- ./col -->
                <div class="col-lg-2 col-xs-6">
                    <!-- small box -->
                    <a href='@Url.Action("JobCard/JobCard", "Dashboard")'>
                        <div class="small-box bg-green w-120">
                            <div class="inner pad-40">
                                <h3 class="m-small-box"></h3>
                            </div>
                            <div class="icon icon-right">
                                <i class="fa fa-id-badge"></i>
                            </div>
                            <span href="#" class="small-box-footer">Job Card <i class="fa fa-arrow-circle-right"></i></span>
                        </div>
                    </a>
                </div>
                <!-- ./col -->
                <div class="col-lg-2 col-xs-6">
                    <!-- small box -->
                    <a href='#'>
